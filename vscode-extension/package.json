{
  "name": "cow-lang-vscode",
  "displayName": "Cow Language Support",
  "description": "Language support for the Cow programming language",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:cow"
  ],
  "contributes": {
    "languages": [
      {
        "id": "cow",
        "aliases": ["Cow", "cow"],
        "extensions": [".cow"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "cow",
        "scopeName": "source.cow",
        "path": "./syntaxes/cow-lang.tmGrammar.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}